{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "r4d",
	"patterns": [
		{
			"include": "#definition"
		},
		{
			"include": "#macro"
		},
		{
			"include": "#literal"
		}
	],
	"repository": {
		"definition": {
			"name": "support.type.r4d",
			"match": "\\$define"
		},
		"macro": {
			"name": "support.function.r4d",
			"match": "\\$[a-zA-Z0-9_]*"
		},
		"literal": {
			"name": "support.constant.r4d",
			"match": "\\\\\\*.*?\\*\\\\"
		}
	},
	"scopeName": "source.r4d"
}